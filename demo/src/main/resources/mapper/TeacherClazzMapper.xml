<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.TeacherClazzMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.entity.TeacherClazz">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="teacher_id" property="teacher_id" jdbcType="VARCHAR"/>
        <result column="clazz_id" property="clazz_id" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="findTeacherClazz" resultMap="BaseResultMap">
        select * from t_TeacherClazz
        <where>
            <if test="teacher_id != null and teacher_id !=''">
                and teacher_id = #{teacher_id,jdbcType=VARCHAR}
            </if>
            <if test="clazz_id != null and clazz_id !=''">
                and clazz_id= #{clazz_id,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

    <delete id="deleteTeacherClazzById" parameterType="int">
        delete from t_TeacherClazz where id = #{id,jdbcType=INTEGER};
    </delete>

    <insert id="addTeacherClazz">
        INSERT INTO t_TeacherClazz (teacher_id, teacher_id)
        VALUES(#{teacher_id,jdbcType=VARCHAR}, #{teacher_id,jdbcType=VARCHAR});

    </insert>


    <update id="updateTeacherClazz">
        update t_TeacherClazz set teacher_id=#{teacher_id,jdbcType=VARCHAR}
        ,teacher_id=#{teacher_id,jdbcType=VARCHAR} where id=#{id,jdbcType=INTEGER};
    </update>


</mapper>